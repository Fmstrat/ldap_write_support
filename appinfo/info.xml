<?xml version="1.0"?>
<info xmlns:xsi= "http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="https://apps.nextcloud.com/schema/apps/info.xsd">
    <id>ldap_write_support</id>
    <name>Write support for LDAP</name>
    <summary>Manages users on LDAP</summary>
    <description><![CDATA[This app implements the following actions to an LDAP backend: create/delete user, modify display name, avatar and e-mail.]]></description>
    <version>1.0.0</version>
    <licence>agpl</licence>
    <author mail="alan@eita.org.br" homepage="http://eita.org.br">Alan Freihof Tygel</author>
    <author mail="blizzz@arthur-schiwon.de" homepage="https://arthur-schiwon.de">Arthur Schiwon</author>
    <namespace>LdapWriteSupport</namespace>
    <category>integration</category>
    <category>organization</category>
    <category>tools</category>
    <bugs>https://github.com/nextcloud/ldap_write_support/issues</bugs>
    <repository>https://github.com/nextcloud/ldap_write_support</repository>
    <screenshot>https://raw.githubusercontent.com/nextcloud/ldap_write_support/master/screenshots/settings.png</screenshot>
    <screenshot>https://raw.githubusercontent.com/nextcloud/ldap_write_support/master/screenshots/users.png</screenshot>
    <dependencies>
        <nextcloud min-version="16" max-version="17"/>
    </dependencies>
    <commands>
        <command>OCA\LdapWriteSupport\Command\GroupAdminsToLdap</command>
    </commands>
    <settings>
        <admin>OCA\LdapWriteSupport\Settings\Admin</admin>
    </settings>
</info>
